<!-- Inclusion du partial header-->
<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit Article</div>
	<form class="ui form" action="/articles/<%= article._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Titre</label>
			<input type="text" name="article[title]" value="<%= article.title%>">
		</div>
		<div class="field">
    		<label>Image</label>
    		<input type="text" name="article[image]" value="<%= article.image%>">
  		</div>
		<div class="field">
    		<label>Contenu</label>
			<textarea name="article[body]"><%= article.body%></textarea>
  		</div>
		<input type="submit" class="ui violet basic button">
	</form>
</div>

<!-- Inclusion du partial footer-->
<% include partials/footer %>