<% include ../partials/header %>

<div class="container mt-4">
	<div class="row">
		<div class="col-lg-12 text-center">
			<h1>Modifier l'annonce : <%= annonce.name %> </h1>
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-lg-6">
			<form action="/annonces/<%= annonce._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="nameAnnonce">Email address</label>
					<input class="form-control" id="nameAnnonce" type="text" name="annonce[name]" placeholder="name" value="<%= annonce.name%>">
				</div>
				<div class="form-group">
					<label for="urlAnnonce">Image URL</label>
					<input class="form-control" id="urlAnnonce" type="text" name="annonce[image]" placeholder="image url" value="<%= annonce.image%>">
				</div>
				<div class="form-group">
					<label for="descriptionAnnonce">Description</label>
					<textarea class="form-control" id="descriptionAnnonce" name="annonce[description]" rows="3"><%= annonce.description%></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Valider</button>
				</div>
			</form>
		</div>
	</div>
</div>

<% include ../partials/footer %>