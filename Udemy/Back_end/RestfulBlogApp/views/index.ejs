<!-- Inclusion du partial header-->
<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">
		RESTful Blog App
	</div>
	<div class="ui top attached">
		<div class="ui divided items">
			<% articles.forEach(function(article){ %>
				<div class="item">
					<div class="image">
						<img src="<%= article.image %>">
					</div>
					<div class="content">
						<a class="header" href="/articles/<%= article._id %>"><%= article.title %></a>
						<div class="meta">
							<span><%= article.created.toDateString() %></span>
						</div>
						<div class="description">
							<p> <%= article.body.substring(0, 100) %>...</p>
						</div>
						<div class="extra">
							<div class="ui label">Developpement Perso</div>
							<div class="ui label"><i class="globe icon"></i>Business</div>
							<a class="ui right floated blue basic button" href="/articles/<%= article._id %>">
								Lire
								<i class="right chevron icon"></i>
							</a>
						</div>
					</div>
				</div>	
			<% }); %>
		</div>
	</div>
</div>


<!-- Inclusion du partial header-->
<% include partials/footer %>